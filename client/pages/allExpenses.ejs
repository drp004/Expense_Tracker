<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Expenses - Expense Tracker</title>
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f0f4f8;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .expenses-container {
            width: 100%;
            max-width: 800px;
            background: #ffffff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        h1 {
            text-align: center;
            color: #333333;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #dddddd;
        }

        th {
            background-color: #007bff;
            color: white;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        .btn {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 15px;
            font-size: 14px;
            color: #ffffff;
            background-color: #007bff;
            text-decoration: none;
            border-radius: 5px;
            text-align: center;
        }

        .btn:hover {
            background-color: #0056b3;
        }

        .no-data {
            text-align: center;
            color: #666666;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="expenses-container">
        <h1>All Expenses</h1>
        <table>
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                <!-- Example row -->
                <tr>
                    <td>2025-01-08</td>
                    <td>Lunch at a restaurant</td>
                    <td>Food</td>
                    <td>$25.50</td>
                </tr>
                <tr>
                    <td>2025-01-07</td>
                    <td>Bus ticket</td>
                    <td>Transport</td>
                    <td>$3.00</td>
                </tr>
                <!-- Add more rows dynamically here -->
            </tbody>
        </table>
        <p class="no-data">No expenses to show.</p>
        <a href="/auth/dashboard" class="btn">Back to Dashboard</a>
    </div>
    
    <script>
        // Function to fetch and display expenses
        async function fetchAndDisplayExpenses() {
            const tableBody = document.querySelector("table tbody");
            const noDataMessage = document.querySelector(".no-data");
    
            try {
                // Replace the URL below with your actual API endpoint
                const response = await fetch('/Expense/showExpenses');
                if (!response.ok) {
                    throw new Error('Failed to fetch expenses');
                }
    
                const expenses = await response.json();
    
                // Clear existing rows
                tableBody.innerHTML = "";
    
                if (expenses.length > 0) {
                    // Hide "No data" message
                    noDataMessage.style.display = "none";
    
                    // Populate table rows
                    expenses.forEach(expense => {
                        const row = document.createElement("tr");
    
                        row.innerHTML = `
                            <td>${expense.date}</td>
                            <td>${expense.description}</td>
                            <td>${expense.category}</td>
                            <td>â‚¹${expense.amount.toFixed(2)}</td>
                        `;
                        tableBody.appendChild(row);
                    });
                } else {
                    // Show "No data" message if no expenses
                    noDataMessage.style.display = "block";
                }
            } catch (error) {
                console.error("Error fetching expenses:", error);
                noDataMessage.textContent = "Failed to load expenses.";
                noDataMessage.style.display = "block";
            }
        }
    
        // Call the function when the page loads
        document.addEventListener("DOMContentLoaded", fetchAndDisplayExpenses);
    </script>
    
</body>
</html>
